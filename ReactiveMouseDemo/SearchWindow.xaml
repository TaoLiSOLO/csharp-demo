<Window x:Class="ReactiveMouseDemo.SearchWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ReactiveMouseDemo"
        mc:Ignorable="d"
        Title="SearchWindow" Height="450" Width="800">
    <Grid>
        <DockPanel>

            <StackPanel DockPanel.Dock="Top" Orientation="Vertical">
                <TextBlock Text="Search Term:" Margin="5,5,0,0"/>
                <TextBox x:Name="SearchTerm" Margin="0,0,0,0"></TextBox>
            </StackPanel>

            <ListBox x:Name="Terms"></ListBox>
        </DockPanel>
    </Grid>
</Window>
